<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Students</title>
</head>
<body>
  <h1>Students</h1>
  <a href="/">Home</a>
  <a href="/students/add">Add Student</a>

  <table border="1">
    <thead>
      <tr>
        <th>Student ID</th>
        <th>Name</th>
        <th>Age</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (students.length > 0) { %>
        <% students.forEach(student => { %>
          <tr>
            <td><%= student.sid %></td>
            <td><%= student.name %></td>
            <td><%= student.age %></td>
            <td>
              <a href="/students/edit/<%= student.sid %>">Edit</a>
              <a href="/students/delete/<%= student.sid %>" onclick="return confirm('Are you sure you want to delete this student?');">Delete</a>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="4">No students found</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</body>
</html>
